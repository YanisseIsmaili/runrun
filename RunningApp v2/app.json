{
  "expo": {
    "name": "Running App",
    "slug": "running-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.runningapp"
    },
    "android": {
      "package": "com.yourcompany.runningapp",
      "adaptiveIcon": {
        "backgroundColor": "#4CAF50"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permettez à l'application de suivre votre position pour enregistrer vos courses.",
          "isIosBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "L'application a besoin d'accéder à vos photos pour mettre à jour votre photo de profil."
        }
      ]
    ],
    "scheme": "running-app",
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}