{
    "expo": {
      "name": "Running App",
      "slug": "running-app",
      "version": "1.0.0",
      "orientation": "portrait",
      "icon": "./assets/icon.png",
      "userInterfaceStyle": "light",
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "contain",
        "backgroundColor": "#4CAF50"
      },
      "assetBundlePatterns": [
        "**/*"
      ],
      "ios": {
        "supportsTablet": true
      },
      "android": {
        "adaptiveIcon": {
          "foregroundImage": "./assets/adaptive-icon.png",
          "backgroundColor": "#4CAF50"
        }
      },
      "web": {
        "favicon": "./assets/favicon.png"
      },
      "newArchEnabled": true,
      "plugins": [
        [
          "expo-location",
          {
            "locationAlwaysAndWhenInUsePermission": "Permettez à l'application de suivre votre position pour enregistrer vos courses."
          }
        ],
        [
          "expo-image-picker",
          {
            "photosPermission": "L'application a besoin d'accéder à vos photos pour mettre à jour votre photo de profil."
          }
        ]
      ]
    }
  }